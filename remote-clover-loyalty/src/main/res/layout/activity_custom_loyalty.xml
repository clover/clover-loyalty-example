<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/dark_grey"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/order_panel"
                  android:background="@drawable/clover_logo_sq"
                  android:layout_width="650dp"
                  android:layout_height="match_parent"
                  android:paddingStart="15dp"
                  android:paddingBottom="75dp"
                  android:orientation="vertical">
        <ListView android:id="@+id/display_order_list"
                  android:layout_margin="15dp"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_above="@id/display_order_list"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forceStopButton"
                    android:visibility="gone"
                    android:text="Force Stop"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    style="@style/li1"
                    android:text="Order Total: "
                    android:layout_alignParentBottom="true" />
            <TextView android:id="@+id/order_total_label"
                      android:layout_width="wrap_content"
                      android:gravity="right"
                      android:layout_gravity="right"
                      android:layout_height="wrap_content"
                      style="@style/li1"
                      android:text="Order Total: $34.79"
                      android:layout_alignParentBottom="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/no_customer_panel"
                  android:background="@color/lighter_dark_grey"
                  android:layout_width="300dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_alignParentRight="true"
                  android:layout_toRightOf="@+id/order_panel">

        <LinearLayout android:id="@+id/phone_number_component"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:visibility="gone">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">
                <TextView android:id="@+id/entered_phone_number"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_columnSpan="3"
                          android:layout_gravity="center_horizontal"
                          android:textColor="@color/white"
                          android:text="000.000.0000"
                          android:gravity="fill"
                          android:textAlignment="center"
                          android:textSize="28sp"/>
            </LinearLayout>
            <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="com.clover.remote.clover.loyalty.NumberPadFragment"
                    android:layout_gravity="center_horizontal"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:gravity="center_horizontal">
                <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:onClick="sendPhoneNumber"
                        android:background="@drawable/button_border_padding_white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_margin="10dp"/>

        <LinearLayout android:id="@+id/account_number_component"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: "
                    android:textColor="@color/white"
                    android:textSize="24dp"/>
            <EditText android:id="@+id/account_number_field"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:width="75dp"
                      android:inputType="number"/>
            <Button
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:onClick="sendAccountNumber"
                    android:background="@drawable/button_border_padding_white"
                    android:padding="10dp"
                    android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_margin="10dp"/>

        <LinearLayout android:id="@+id/barcode_enabled"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center"
                      android:visibility="gone">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Barcode: "
                    android:textColor="@color/white"
                    android:textSize="24dp"/>
            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_btn_scan"
                    android:onClick="startBarCode"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/customer_panel"
                  android:layout_width="300dp"
                  android:layout_height="match_parent"
                  android:layout_alignParentRight="true"
                  android:background="@color/lighter_dark_grey"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:gravity="center_horizontal"
                  android:paddingTop="15dp"
                  android:layout_toRightOf="@+id/order_panel">
        <TextView android:id="@+id/not_you_text_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:onClick="clearCustomer"
                  android:text="Not you?"
                  android:textColor="@color/white"
                  android:textSize="24dp"/>
        <TextView android:id="@+id/welcome_message"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textAlignment="center"
                  android:textColor="@color/white"
                  android:textSize="36dp"/>
        <TextView android:id="@+id/customer_account_points"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textAlignment="center"
                  android:textColor="@color/white"
                  android:textSize="96dp"/>
        <LinearLayout android:id="@+id/offers_panel"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="25dp">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/tap_enabled"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:gravity="center_horizontal"
                  android:paddingBottom="15dp"
                  android:orientation="horizontal"
                  android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:text="Tap "
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/vas_enabled"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/nfc_tap_logo"
            android:scaleX="1"
            android:scaleY="1"/>
        <ImageView
            android:id="@+id/quick_pay_enabled"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/quick_pay"
            android:scaleX="1"
            android:scaleY="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:text=" Here"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>