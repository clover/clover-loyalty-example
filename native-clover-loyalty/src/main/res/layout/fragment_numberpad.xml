<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3">
    <Button android:text="1" android:id="@+id/button1" style="@style/roundButton" android:tag="ONE"/>
    <Button android:text="2" android:id="@+id/button2" style="@style/roundButton" android:tag="TWO"/>
    <Button android:text="3" android:id="@+id/button3" style="@style/roundButton" android:tag="THREE"/>

    <Button android:text="4" android:id="@+id/button4" style="@style/roundButton" android:tag="FOUR"/>
    <Button android:text="5" android:id="@+id/button5" style="@style/roundButton" android:tag="FIVE"/>
    <Button android:text="6" android:id="@+id/button6" style="@style/roundButton" android:tag="SIX"/>

    <Button android:text="7" android:id="@+id/button7" style="@style/roundButton" android:tag="SEVEN"/>
    <Button android:text="8" android:id="@+id/button8" style="@style/roundButton" android:tag="EIGHT"/>
    <Button android:text="9" android:id="@+id/button9" style="@style/roundButton" android:tag="NINE"/>

    <LinearLayout android:id="@+id/buttonBack"
                  style="@style/roundButton"
                  android:gravity="center"
                  android:tag="BACK">
        <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingEnd="10dp"
                android:src="@drawable/delete"/>
    </LinearLayout>
    <Button android:text="0" android:id="@+id/button0" style="@style/roundButton" android:tag="ZERO"/>
    <Button android:text="clear" android:id="@+id/buttonClear" style="@style/roundButton" android:tag="CLEAR"/>
</GridLayout>