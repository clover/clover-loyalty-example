<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="50dp" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:id="@+id/quantity" style="@style/li1" android:text="2" android:textSize="32dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/name" android:text="Sampe Line Item Name" style="@style/li1" android:layout_weight="1" android:textSize="32sp"/>
    <TextView android:layout_width="150dp" android:layout_height="wrap_content" android:id="@+id/amount" android:layout_gravity="right" android:gravity="right" android:text="$129.99" style="@style/li1"/>
</LinearLayout>
